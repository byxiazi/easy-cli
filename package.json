{
  "name": "npm-library-cli",
  "version": "0.1.0",
  "description": "Awesome CLI that makes creating a npm library extremely easy.",
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "rimraf lib",
    "build": "tsc",
    "watch": "tsc -w",
    "precommit": "lint-staged",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byxiazi/easy-cli.git"
  },
  "keywords": [
    "cli",
    "react"
  ],
  "author": "xiaohua",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/byxiazi/easy-cli/issues"
  },
  "homepage": "https://github.com/byxiazi/easy-cli#readme",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "bin": {
    "npm-library-cli": "./bin/index.js"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "ejs": "^3.1.3",
    "fs-extra": "^9.0.0",
    "inquirer": "^7.1.0",
    "mustache": "^4.0.1",
    "readline": "^1.3.0",
    "typescript": "^3.9.2",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/fs-extra": "^9.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.0.1",
    "@types/validate-npm-package-name": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "rimraf": "^3.0.2",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0"
  }
}
